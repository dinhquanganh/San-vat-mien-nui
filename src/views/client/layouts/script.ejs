<script>
  function convertNumber(number) {
    return number.toString().replace(/(\d)(?=(\d{3})+(?!\d))/g, '$1,');
  }

  setInterval(() => {
    if (document.querySelectorAll('.price-cv'))
      document.querySelectorAll('.price-cv').forEach(function (item) {
        item.innerHTML = convertNumber(item.innerHTML);
      });
  }, 3000);
</script>

